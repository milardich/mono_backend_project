@model Project.MVC.Models.VehicleModelViewModel

<h1>Edit VehicleModel</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Id</label>
        <input disabled readonly type="text" class="form-control" asp-for="Id" />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Abrv</label>
        <input type="text" class="form-control" asp-for="Abrv" />
    </div>

    <div class="mt-3">
        <label class="form-label">VehicleMake</label>
        <input disabled readonly type="text" class="form-control" asp-for="VehicleMake.Id" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>

        <button type="submit" class="btn btn-danger ms-3" asp-controller="VehicleModels" asp-action="Delete" asp-route-id="@Model.Id">
            Delete
        </button>
    </div>
</form>