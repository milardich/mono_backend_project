@model VehicleMakeViewModel

@{
    ViewData["Title"] = "VehicleMake CRUD";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>


<div class="d-flex text-center">
    <div class="m-auto">
        <h4>Input</h4>
        <input value="" placeholder="Name" />
        <br />
        <input value="" placeholder="Abrv" />
        <br />
        <button type="submit">Create</button>
        <br />
        <br />

        <input value="" placeholder="Id" />
        <br />
        <button type="submit">Read</button>
        <br />
        <br />
        <input value="" placeholder="Name" />
        <br />
        <input value="" placeholder="Abrv" />
        <br />
        <button type="submit">Update</button>
        <br />
        <br />
        <input value="" placeholder="Id" />
        <br />
        <button type="submit">Delete</button>
        <br />
        <br />
    </div>

    <div class="m-auto">
        <h4>Output</h4>
        <table class="table-bordered">
            <tr>
                <th>Name</th>
                <th>Abrv</th>
            </tr>
            @foreach (var vehicleMake in Model.makeDTOs)
            {
                <tr>
                    <td>@vehicleMake.Name</td>
                    <td>@vehicleMake.Abrv</td>
                </tr>
            }
        </table>
    </div>


</div>

